{
  "manifest_version": 3,
  "name": "ImmoMetrica â†’ Todoist",
  "version": "1.1.0",
  "description": "Add ImmoMetrica property listings to Todoist with location labels",
  
  "action": {
    "default_title": "Add property to Todoist"
  },
  
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  
  "host_permissions": [
    "https://www.immometrica.com/*",
    "https://api.todoist.com/*"
  ],
  
  "options_page": "options.html"
}